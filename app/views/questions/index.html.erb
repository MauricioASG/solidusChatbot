# app/views/questions/index.html.erb
<div class="question-form">
  <%= turbo_frame_tag "answer" do %>
    <p id="answer"></p> <!-- Aquí se mostrará la respuesta -->
  <% end %>

  <%= turbo_frame_tag "new_question" do %>
    <%= form_tag chatbot_path, method: :post, class: 'question-input' do %>
      <%= label_tag :question, "Ask your question:" %>
      <%= text_field_tag "question[question]", nil, placeholder: "Type your question" %>
      <%= submit_tag "Ask" %>
    <% end %>
  <% end %>
</div>
